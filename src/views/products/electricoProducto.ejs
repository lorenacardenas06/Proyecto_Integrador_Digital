<!DOCTYPE html>
<html lang="en">
<head>
  <title>Electricos</title>
  <link rel="stylesheet" href="/css/Home.css"></link>
  <%-include("../partials/head")%>
</head>

<body class="body">
  <%-include("../partials/header")%>

  <main>
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12 encabezado">
                <h3 class="products-title">Productos</h3>
            </div>
            <%for(let p of producto){%>
            <div class="col-sm-3">
                <section class="product-box">
                    <a href="/detalleProducto/<%=p.id %>">
                        <figure class="product-box_image">
                            <img src="<%=p.imagen %>" class="img-fluid" alt="imagen de producto">
                        </figure>
                        <article class="product-box_data">
                            <p>$<%=p.precio%></p>
                            <p><%=p.nombre%></p>
                            <div class="iconProducto" align="right">
                                <i class="fas fa-truck"></i>
                            </div>
                        </article>
                    </a>
                </section>
            </div>
            <% } %>
        </div>
    </div>

  </main>
  <%-include("../partials/footer")%>
</body>
</html>