<main>
    <h2>CREA UN PRODUCTO</h2>
    <div class="wrapper fadeInDown">
      <div class="col">
        <form action="products/detalleProducto" method="POST" enctype="multipart/form-data" >
          <div class="row product-detail">
            <div class="col">
              <label for="name" class="form-label">Nombre:</label><br>
              <input type="text" id="name" name="name" class="form-input">
            </div>
            <div class="col">
              <label for="marca" class="form-label">Marca:</label><br>
              <input type="text" id="marca" name="marca" placeholder="" class="form-input">
            </div>
          <div class="row">  
            <div class="col">
              <label for="price" class="form-label">Precio:</label><br>
              <input type="text" id="price" name="price" class="form-input">
            </div>
            <div class="col">
              <label for="discount" class="form-label">Descuento:</label><br>
              <input type="text" id="discount" name="discount" class="form-input">
            </div>
          </div>
            <div class="row">
              <div class="col">
                <label for="category" class="form-label">Categoría:</label><br>
                <select name="category" id="category" class="form-input">
                  <option value="">maquillaje</option>
                  <option value="in-sale"> Skincare</option>
                  <option value="visited">bodycare</option>
                </select>
              </div>
            </div>
            <div class="col-12 col-md-6">
              <label for="cImage" class="form-label">Cargar imagen</label>
              <input type="file" name="cImage" id="cImage" multiple/></input>
            </div>  
            <div class="row">
              <label for="description" class="form-label">Descipción:</label>
              <textarea name="description" id="description" class="form-input"></textarea>
            </div><br>
            <div class="col-12">
              <button2 type="submit" class="buy-now-button">Guardar producto</button>
            </div>
          </div>
        </form>
      </div>
    </div>
</main>

